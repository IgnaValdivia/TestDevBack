                }
            },
            "delete": {
                "tags": [
                    "Torneos"
                ],
                "summary": "Eliminar un torneo",
                "operationId": "2fb17d30739a7af8777c590e66ef1f7d",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {

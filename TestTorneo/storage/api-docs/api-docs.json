                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Torneo comenzado"
                    },
                    "400": {
                        "description": "No se pudo comenzar el torneo"
                    }
                }
            }
        },
        "/api/torneos/{id}/estado": {
            "get": {
                "tags": [
                    "Torneos"
                ],
                "summary": "Obtener el estado actual de un torneo",
                "operationId": "5506f916aa367f6ec49106f36f105ca3",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
